{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Vite",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Upgrade Level",
      "type": "shell",
      "command": "python3",
      "args": ["${workspaceFolder}/scripts/upgrade.py"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Reset Level",
      "type": "shell",
      "command": "python3",
      "args": ["${workspaceFolder}/scripts/reset.py"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "env": {
          "CONFIRM_RESET": "${input:confirmReset}"
        }
      }
    },
    {
      "label": "Export License Key",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/export_license_key.sh",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Import License Key",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/import_license_key.sh",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      },
      "options": {
        "env": {
          "LICENSE_KEY": "${input:licenseKey}"
        }
      }
    }
  ],
  "inputs": [
    {
      "id": "confirmReset",
      "type": "promptString",
      "description": "Type 'yes' to confirm reset",
      "default": ""
    },
    {
      "id": "licenseKey",
      "type": "promptString",
      "description": "Enter the license key",
      "password": true,
      "default": ""
    }
  ]
}
